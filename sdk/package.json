{
    "name": "shop-with-friends",
    "version": "1.1.0",
    "description": "Add real-time collaborative shopping to any e-commerce site with a single line of code.",
    "type": "module",
    "main": "./dist/shop-with-friends.umd.cjs",
    "module": "./dist/shop-with-friends.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/shop-with-friends.js",
            "require": "./dist/shop-with-friends.umd.cjs"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "tsc && vite build",
        "dev": "vite build --watch",
        "typecheck": "tsc --noEmit",
        "prepublishOnly": "npm run build"
    },
    "devDependencies": {
        "@types/node": "^22.14.0",
        "terser": "^5.44.1",
        "typescript": "^5.8.2",
        "vite": "^6.2.0",
        "vite-plugin-dts": "^3.9.1"
    },
    "keywords": [
        "ecommerce",
        "collaborative-shopping",
        "real-time",
        "websocket",
        "social-shopping",
        "shopify",
        "woocommerce",
        "webrtc",
        "voice-chat"
    ],
    "author": "Sulaiman Adebayo <lanryweezy@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/lanryweezy/shop-with-friends"
    },
    "bugs": {
        "url": "https://github.com/lanryweezy/shop-with-friends/issues"
    },
    "homepage": "https://shop-with-friends.vercel.app"
}